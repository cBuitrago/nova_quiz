<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
       
        {% block stylesheets %}
            <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,500' rel='stylesheet' type='text/css'>
            <link rel="stylesheet" href="{{ asset('Resources/public/css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('Resources/public/css/main.css') }}">
            {% include 'settings.html.twig' %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="{% block body_class %}{% endblock %}">
    {% block body %}{% endblock %}
    {% block javascripts %}
        <script src="{{ asset('Resources/public/js/jquery.min.js') }}"></script>
        <script src="{{ asset('Resources/public/js/main.js') }}"></script>
    {% endblock %}
</body>
</html>
