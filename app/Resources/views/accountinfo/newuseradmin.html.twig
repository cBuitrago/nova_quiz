{% extends 'base.html.twig' %}
{% import "forms.html.twig" as forms %}
{% block content %}
    {% set page = {'active': 'new'} %}
    <ul class="nav nav-tabs">
        {% include 'accountinfo/navbar.html.twig' with page %}
    </ul>
    <div class="tab-content">
        <div class="tab-pane bg-image active" >
            <div class="addItem">
                <h1>AJOUTER ADMIN DU COMPTE</h1>
                <form method="POST" >
                    {{ forms.input("username", null, "text", null, "Nom d'utilisateur", null, "name", null) }}
                    {{ forms.input("email", null, "text", null, "Courriel", null, "email", null) }}
                    {{ forms.double_input("firstname", null, "text", null, "Prénom", null, null, "name", "name", null, "text", null, "Nom de famille", null, null, "name") }}
                    {{ forms.input("password", null, "password", null, "Mot de passe", null, "password", null) }}
                    {{ forms.button_form("submit", "add", null, "tooltip", "left", "creer compte", "Créér compte") }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('Resources/public/js/forms.js') }}"></script>
{% endblock %}