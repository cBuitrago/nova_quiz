{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('Resources/public/css/bootstrap-colorpicker.min.css') }}" rel="stylesheet" type='text/css' />
{% endblock %}
{% import "forms.html.twig" as forms %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('Resources/public/js/bootstrap-colorpicker.min.js') }}"></script>
{% endblock %}
{% block content %}
    {% set page = {'active': ''} %}
    <ul class="nav nav-tabs">
        {% include 'quiz/navbar.html.twig' with page %}
        <li class="active">
            <a href="{{ path('quiz_new', { 'account': account }) }}">{{ quiz.quizId }}</a>
        </li>
    </ul>
    <form method="POST" id="add_quiz_form">
        <div class="containerEdit">
            <h2 class="text-center">{{ "general.group.plural"|trans|capitalize }}</h2>
            <div class="start-tree">
                {% include 'departmentTreeCheckBox.html.twig' with {'departments': departments, 'checked': quiz} %}
            </div>
            <div>
                <input type="hidden" name="edit_quiz_authorization" value="true" >
                <button type="submit" class="nv-btn-default nv-principal-color" id="onAddQuiz" 
                        data-toggle="tooltip" data-placement="left" title="ajouter quiz">
                    {{ "quiz.updateGroups"|trans|capitalize }}
                </button>
            </div>
        </div>
    </form>
{% endblock %}


