{% extends 'base.html.twig' %}
{% block content %}
    <div>
        <ul class="nav nav-tabs">
            {% set page = {'active': ''} %}
            {% include 'departmentinfo/navbar.html.twig' with page %}
            <li class="active">
                <a href="{{ path('user_index', { 'account': account }) }}">Group</a>
            </li>
        </ul>
        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ departmentInfo.id }}</td>
                </tr>
                <tr>
                    <th>Isactive</th>
                    <td>{% if departmentInfo.isActive %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ departmentInfo.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ departmentInfo.description }}</td>
                </tr>
                <tr>
                    <th>Createdon</th>
                    <td>{% if departmentInfo.createdOn %}{{ departmentInfo.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
        <ul>
            <li>
                <a href="{{ path('departmentinfo_index', { 'account': account }) }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('departmentinfo_edit', { 'id': departmentInfo.id, 'account': account }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
