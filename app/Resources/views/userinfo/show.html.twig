{% extends 'base.html.twig' %}
{% block content %}
    <div>
        <ul class="nav nav-tabs">
            {% set page = {'active': ''} %}
            {% include 'userinfo/navbar.html.twig' with page %}
            <li class="active">
                <a href="{{ path('user_index', { 'account': account }) }}">Utilisateur</a>
            </li>
        </ul>
        <table class="table table-hover table-responsive">
            <tbody>
                <tr>
                    <th>Username</th>
                    <td>{{ userInfo.username }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ userInfo.name }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ userInfo.firstName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ userInfo.email }}</td>
                </tr>
                <tr>
                    <th>Usager actif ?</th>
                    <td>{% if userInfo.isActive %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Changer mot de passe</th>
                    <td>{% if userInfo.isActive %}Yes{% else %}No{% endif %}</td>
                </tr>
                <tr>
                    <th>Department</th>
                    <td>{{ userInfo.departmentAuthorization.departmentInfo.name}}</td>
                </tr>
                <tr>
                    <th>Createdon</th>
                    <td>{% if userInfo.createdOn %}{{ userInfo.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Modifiedon</th>
                    <td>{% if userInfo.modifiedOn %}{{ userInfo.modifiedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
        <ul>
            {#<li>
                <a href="{{ path('user_index', { 'account': account }) }}">Back to the list</a>
            </li>#}
            <li>
                <a href="{{ path('user_edit', { 'id': userInfo.id, 'account': account }) }}">Ã‰diter</a>
            </li>
            {#<li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>#}
        </ul>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
