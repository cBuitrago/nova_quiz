{% extends 'base.html.twig' %}
{% import "forms.html.twig" as forms %}
{% block content %}
    {% set page = {'active': ''} %}
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="{{ path('user_index', { 'account': account }) }}">{{ "general.profile"|trans|capitalize }}</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" >
            <div class="addItem">
                <h1>{{ app.user.firstname }} {{ app.user.name }}</h1>
                <form method="POST" >
                    {{ forms.double_input("firstname", app.user.firstname, "text", null, "user.firstname"|trans|capitalize, null, null, "name", 
                            "name", app.user.name, "text", null, "user.lastname"|trans|capitalize, null, "name", "name") }}
                    {{ forms.input("n1password", null, "password", null, "user.psw.newpsw"|trans|capitalize, null, "password", null) }}
                    {{ forms.input("n2password", null, "password", null, "user.psw.confirmnewpsw"|trans|capitalize, null, "password", null) }}
                    {{ forms.button_form("submit", "add", null, "tooltip", "left", "user.profile.edit"|trans|capitalize, "user.profile.edit"|trans|capitalize) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('Resources/public/js/forms.js') }}"></script>
{% endblock %}
